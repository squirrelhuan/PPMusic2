<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout  
  xmlns:android="http://schemas.android.com/apk/res/android"  
  android:orientation="vertical"  
  android:layout_width="match_parent"  
  android:layout_height="match_parent">  
  
  <RelativeLayout android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:orientation="horizontal">
       
      <TextView   
  android:id="@+id/tv_rv"  
  android:layout_width="fill_parent"  
  android:layout_height="wrap_content"  
  android:layout_centerVertical="true"  
  android:layout_toLeftOf="@+id/play_last"
  android:singleLine="true"
 />   
    <ImageView android:id="@+id/play_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/play"
        android:layout_centerVertical="true"
        android:src="@drawable/button_play_last_normal"/>
    <ImageView android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/play_next"
        android:layout_centerVertical="true"
        
        android:src="@drawable/button_play_flag_normal"/>
    <ImageView android:id="@+id/play_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/button_play_next_normal"/>
  </RelativeLayout>

<ProgressBar   
  style="@android:style/Widget.ProgressBar.Horizontal"  
  android:id="@+id/pb_rv"  
  android:layout_width="fill_parent"  
  android:layout_height="3dp"  
 android:layout_alignParentBottom="true"
 android:layout_marginBottom="6dp"
 />   
</RelativeLayout>