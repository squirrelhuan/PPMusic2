<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

   <LinearLayout android:id="@+id/ll_01"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:focusable="true" 
        android:focusableInTouchMode="true"
        android:padding="5dp">
         <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dip"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        />   
        <EditText
            android:id="@+id/keyboard_tv"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="5"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_editview"
            android:ems="10"
            android:hint="在线音乐任你听！"
            android:textColor="@color/blue"
            android:maxLines="1" />
         <Button
                android:id="@+id/btn_input_sure"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:background="@drawable/keyboard_select"
                android:text="搜索" />
    </LinearLayout>
    
    <ListView
        android:id="@+id/lvSongs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:cacheColorHint="#00000000" />


</LinearLayout>